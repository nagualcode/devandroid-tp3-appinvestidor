<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.ResultActivity">

    <TextView
        android:id = "@+id/textViewResultado"
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:layout_marginStart = "8dp"
        android:layout_marginTop = "156dp"
        android:text = "Resultado:"
        android:textSize = "24sp"
        app:layout_constraintStart_toStartOf = "parent"
        app:layout_constraintTop_toTopOf = "parent" />

    <TextView
        android:id = "@+id/textViewValorResultado"
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:layout_marginStart = "8dp"
        android:layout_marginTop = "156dp"
        android:hint = "0"
        android:textSize = "24sp"
        app:layout_constraintStart_toEndOf = "@+id/textViewResultado"
        app:layout_constraintTop_toTopOf = "parent" />

    <TextView
        android:id = "@+id/textViewTextoPontos"
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:layout_marginStart = "8dp"
        android:layout_marginTop = "156dp"
        android:text = "pontos"
        android:textSize = "24sp"
        app:layout_constraintStart_toEndOf = "@+id/textViewValorResultado"
        app:layout_constraintTop_toTopOf = "parent" />

</androidx.constraintlayout.widget.ConstraintLayout>